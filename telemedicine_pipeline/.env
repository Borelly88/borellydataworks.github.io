# Environment variables for Telemedicine Appointment Data Pipeline

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_APPOINTMENTS=telemedicine-appointments
KAFKA_TOPIC_FEEDBACK=telemedicine-feedback
KAFKA_TOPIC_EVENTS=telemedicine-events

# Postgres Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=telemedicine

# Redshift Configuration (using Postgres as local substitute)
REDSHIFT_HOST=localhost
REDSHIFT_PORT=5439
REDSHIFT_USER=redshift
REDSHIFT_PASSWORD=redshift
REDSHIFT_DB=redshift

# Airflow Configuration
AIRFLOW_HOST=localhost
AIRFLOW_PORT=8080
AIRFLOW_USER=admin
AIRFLOW_PASSWORD=admin

# S3 Configuration (for local development)
S3_BUCKET_NAME=telemedicine-data
S3_REGION=us-east-1

# Application Settings
LOG_LEVEL=INFO
